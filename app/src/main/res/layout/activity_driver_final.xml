<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgimgkrr1"
    tools:context=".DriverFinalActivity">

    <TextView
        android:id="@+id/toolbar"
        android:layout_width="347dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="-3dp"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="673dp"
        android:backgroundTint="@color/Lavender"
        android:text="UniRide"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,MissingConstraints,TextContrastCheck,TextSizeCheck,VisualLintBounds,VisualLintOverlap"
        tools:layout_editor_absoluteY="2dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Details of Passenger"
                android:id="@+id/details"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/Lavender"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="35dp"
                android:autofillHints=""
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:text="Name  Rovin Roy"
                android:textColor="@color/Lavender"
                android:textSize="20dp"
                tools:ignore="HardcodedText,RtlHardcoded,SpUsage,TextContrastCheck,TextContrastCheck,TextFields,TextSizeCheck,VisualLintTextFieldSize" />

            <TextView
                android:id="@+id/number"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:drawablePadding="8dp"
                android:text="Mobile No. 998765xxxx"
                android:textSize="20sp"
                android:padding="8dp"
                android:textColor="@color/Lavender"
                android:textColorHint="#AB47BC"
                tools:ignore="Autofill,HardcodedText,RtlHardcoded,TextContrastCheck,VisualLintTextFieldSize" />

            <TextView
                android:id="@+id/Seats"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:drawablePadding="8dp"
                android:text="Number of Seats :  2"
                android:textSize="20sp"
                android:padding="8dp"
                android:textColor="@color/Lavender"
                android:textColorHint="#AB47BC"
                tools:ignore="Autofill,HardcodedText,RtlHardcoded,TextContrastCheck,VisualLintTextFieldSize" />

            <TextView
                android:id="@+id/payment"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:drawablePadding="8dp"
                android:text="Payment method  :  online"
                android:textSize="20sp"
                android:padding="8dp"
                android:textColor="@color/Lavender"
                tools:ignore="Autofill,HardcodedText,RtlHardcoded,TextContrastCheck,TextContrastCheck,VisualLintTextFieldSize" />

            <TextView
                android:id="@+id/otp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:autofillHints=""
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:text="OTP   876889"
                android:textColor="@color/Lavender"
                android:textSize="20dp"
                tools:ignore="HardcodedText,RtlHardcoded,SpUsage,TextContrastCheck,TextContrastCheck,TextFields,VisualLintTextFieldSize,TextSizeCheck" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>





</RelativeLayout>
