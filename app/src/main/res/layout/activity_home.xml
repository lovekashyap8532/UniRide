<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bgimgkrr1"
    >

    <FrameLayout
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="396dp"
        android:layout_above="@+id/current_location"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        tools:ignore="ObsoleteLayoutParam">

    </FrameLayout>

    <TextView
        android:id="@+id/toolbar"
        android:layout_width="327dp"
        android:layout_height="61dp"
        android:layout_above="@+id/map"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="84dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="7dp"
        android:backgroundTint="@color/Lavender"
        android:text="UniRide"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText,MissingConstraints,TextContrastCheck,TextSizeCheck"
        tools:layout_editor_absoluteY="2dp" />

    <EditText
        android:id="@+id/current_location"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_above="@+id/destination"
        android:layout_marginBottom="19dp"
        android:padding="16dp"
        android:hint="Enter Current Location"
        android:textSize="18sp"
        tools:ignore="Autofill,HardcodedText,LabelFor,TextContrastCheck,TextFields,VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/destination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/near_rider"
        android:layout_marginBottom="11dp"
        android:hint="@string/enter_destination"
        android:padding="16dp"
        android:textSize="18sp"
        tools:ignore="Autofill,LabelFor,TextFields,VisualLintTextFieldSize" />

    <ImageButton
        android:id="@+id/messenger_button"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="16dp"
        android:background="#039be5"
        android:padding="10dp"
        android:src="@drawable/msglogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck,ImageContrastCheck" />

    <Button
        android:id="@+id/near_rider"
        android:layout_width="179dp"
        android:layout_height="66dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="13dp"
        android:text="Nearest Rider"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        tools:ignore="HardcodedText,TextSizeCheck,TouchTargetSizeCheck,VisualLintOverlap" />

    <ImageButton
        android:id="@+id/profilebutton"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="252dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="35dp"
        android:layout_toStartOf="@+id/messenger_button"
        android:background="#039BE5"
        android:src="@drawable/profilepic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck,ImageContrastCheck" />

</RelativeLayout>
