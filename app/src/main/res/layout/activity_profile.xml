<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:background="#00ffff"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="0dp">


    </LinearLayout>

    <ImageView
        android:id="@+id/user_image"
        android:layout_width="250dp"
        android:layout_height="175dp"
        android:src="@drawable/profile_pic"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/username"
        android:layout_width="340dp"
        android:layout_height="69dp"
        android:layout_marginTop="236dp"
        android:background="@drawable/custom_edittext"
        android:drawableLeft="@drawable/baseline_person_24"
        android:drawablePadding="8dp"
        android:padding="18dp"
        android:text="@string/unirider"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints,RtlHardcoded,UseCompatTextViewDrawableXml,VisualLintBounds" />

    <TextView
        android:id="@+id/email"
        android:layout_width="337dp"
        android:layout_height="71dp"
        android:background="@drawable/custom_edittext"
        android:drawablePadding="8dp"
        android:padding="18dp"
        android:text="@string/uniride_gmail_com"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:drawableLeftCompat="@drawable/baseline_email_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.499"
        tools:ignore="MissingConstraints,SpUsage,TextSizeCheck,VisualLintBounds" />

    <Button
        android:id="@+id/logoutbutton"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:backgroundTint="@color/Lavender"
        android:text="@string/logout"
        android:textSize="18sp"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/linearLayout"
        app:layout_constraintVertical_bias="0.739"
        tools:ignore="MissingConstraints,TextContrastCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>