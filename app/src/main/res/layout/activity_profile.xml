<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bgimgkrr1"
    >

    <FrameLayout
        android:id="@+id/mapview"
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_above="@+id/current_location"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        tools:ignore="ObsoleteLayoutParam">
    </FrameLayout>

    <TextView
            android:id="@+id/toolbar"
            android:layout_width="420dp"
            android:layout_height="47dp"
            android:layout_marginBottom="396dp"
            android:background="#039BE5"
            android:gravity="center"
            android:text="Krishna Rickshaw Rider"
            android:textColor="@color/purple_200"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/messenger_button"
            tools:ignore="HardcodedText,MissingConstraints,TextContrastCheck,TextSizeCheck"
            tools:layout_editor_absoluteY="2dp" />

    <EditText
        android:id="@+id/current_location"
        android:layout_width="match_parent"
        android:layout_height="61dp"
        android:layout_above="@+id/destination"
        android:layout_marginBottom="19dp"
        android:padding="16dp"
        android:hint="Enter Current Location"
        android:textSize="18sp"
        tools:ignore="Autofill,HardcodedText,LabelFor,TextContrastCheck,TextFields,VisualLintTextFieldSize" />

    <EditText
        android:id="@+id/destination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/near_rider"
        android:layout_marginBottom="37dp"
        android:hint="@string/enter_destination"
        android:padding="16dp"
        android:textSize="18sp"
        tools:ignore="Autofill,LabelFor,TextFields,VisualLintTextFieldSize" />

    <ImageButton
        android:id="@+id/profile_pic"
        android:layout_width="49dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:background="#039be5"
        android:src="@drawable/profile_pic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck,ImageContrastCheck" />

    <ImageButton
        android:id="@+id/messenger_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="22dp"
        android:background="#039be5"
        android:src="@drawable/msglogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck,ImageContrastCheck" />

    <Button
        android:id="@+id/near_rider"
        android:layout_width="179dp"
        android:layout_height="66dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="49dp"
        android:text="Nearest Rider"
        tools:ignore="HardcodedText,TextSizeCheck,TouchTargetSizeCheck,VisualLintOverlap" />

</RelativeLayout>
